
<h1>Student Data</h1>

<table>
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Class</th>
		<th>Show Link</th>
		<th>Delete</th>
		<th>Comments</th>
	</tr>


		<% @student.each do |s| %>
		 
			<tr>
				
				<td><%= s.first_name %></td>
				<td><%= s.last_name %></td>
				<td><%= s.class_name %></td>
				<td>
				  <a href="<%= student_path(s) %>">Student Details </a>
				</td>
				<td>
					<%= link_to "Destroy", student_path(s.id), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                     } %>
                </td>
			</tr>
		<% end %>
		<tr>
			<button><a href="<%= new_student_path %>">New Student</a></button>
		</tr>   
   <tr>

</table>



